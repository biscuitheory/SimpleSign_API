generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Attendance {
  id                Int                 @id
  session_start     DateTime            @db.DateTime(0)
  session_end       DateTime            @db.DateTime(0)
  status            Attendance_status   @default(opened)
  studentAttendances StudentAttendance[]
}

model Class {
  id         Int          @id
  name       String?      @db.VarChar(255)
  course     String?      @db.VarChar(255)
  date_start DateTime?    @db.DateTime(0)
  end_start  DateTime?    @db.DateTime(0)
  classTutors ClassTutor[]
  students    Student[]
}

model ClassTutor {
  class_id Int
  tutor_id Int
  class    Class @relation(fields: [class_id], references: [id])
  tutor    Tutor @relation(fields: [tutor_id], references: [id])

  @@id([class_id, tutor_id])
  @@index([class_id], name: "fk_ClassTutor_Class_id")
  @@index([tutor_id], name: "fk_ClassTutor_Tutor_id")
}

model Student {
  id                Int                 @unique
  user_id           Int
  class_id          Int
  class             Class               @relation(fields: [class_id], references: [id])
  user              User                @relation(fields: [user_id], references: [id])
  studentAttendance StudentAttendance[]

  @@id([id, user_id, class_id])
  @@index([class_id], name: "fk_StudentClass_id")
  @@index([user_id], name: "fk_StudentUser_id")
}

model StudentAttendance {
  student_id      Int
  studentUser_id  Int
  studentClass_id Int
  attendance_id   Int
  attendance      Attendance @relation(fields: [attendance_id], references: [id])
  student         Student    @relation(fields: [student_id, studentUser_id, studentClass_id], references: [id, user_id, class_id])

  @@id([student_id, studentUser_id, studentClass_id, attendance_id])
  @@index([attendance_id], name: "fk_StudentAttendance_Attendance_id")
  @@index([student_id, studentUser_id, studentClass_id], name: "fk_StudentAttendance_Student_id")
}

model Tutor {
  id         Int          @unique
  user_id    Int
  User       User         @relation(fields: [user_id], references: [id])
  classTutors ClassTutor[]

  @@id([id, user_id])
  @@index([user_id], name: "fk_TutorUser_id")
}

model User {
  id        Int        @id
  firstname String     @db.VarChar(255)
  lastname  String     @db.VarChar(255)
  email     String     @db.VarChar(255)
  password  String     @db.VarChar(255)
  role      User_role? @default(scholar)
  students   Student[]
  tutors    Tutor[]
}

enum Attendance_status {
  opened
  closed
}

enum User_role {
  scholar
  admin
}
